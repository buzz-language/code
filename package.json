{
  "name": "buzz",
  "displayName": "buzz",
  "description": "Language support for the buzz programming language",
  "version": "0.0.1",
  "publisher": "giann",
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://github.com/buzz-language/code/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/buzz-language/code/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buzz-language/code.git"
  },
  "engines": {
    "vscode": "^1.68.0"
  },
  "icon": "https://github.com/buzz-language/code/raw/main/logo.png",
  "galleryBanner": {
    "color": "#221328",
    "theme": "dark"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "buzz",
        "aliases": ["buzz", "buzz"],
        "extensions": ["buzz"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "buzz",
        "scopeName": "source.buzz",
        "path": "./syntaxes/buzz.tmLanguage.json"
      }
    ],
    "problemMatchers": [
      {
        "owner": "buzz",
        "fileLocation": ["autoDetect", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^([^:]+):(\\d+):(\\d+): (Syntax|Compile)? (error): (.*)+",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 5,
            "message": 6
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "buzz.start",
        "title": "Start Server",
        "category": "Buzz Language Server"
      },
      {
        "command": "buzz.stop",
        "title": "Stop Server",
        "category": "Buzz Language Server"
      },
      {
        "command": "buzz.restart",
        "title": "Restart Server",
        "category": "Buzz Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Buzz Language Server",
      "properties": {
        "buzz.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "buzz.path": {
          "scope": "resource",
          "type": "string",
          "description": "Path to buzz lsp",
          "format": "path"
        }
      }
    }
  },
  "activationEvents": ["onLanguage:buzz"],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "axios": "^0.27.2",
    "mkdirp": "^1.0.4",
    "vscode-languageclient": "8.0.2-next.5"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "vscode-test": "^1.3.0"
  }
}
